<html>
	<head>
		<link
			href="assets/style.css"
			type="text/css"
			rel="stylesheet" />
		<script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
	</head>
	<body>
		<h1>Hello world!</h1>
		<form
			method="POST"
			action="/person">
			First name:
			<input
				type="text"
				id="firstName"
				name="firstName" />
			<br />
			Last name:
			<input
				type="text"
				id="lastName"
				name="lastName" />
			<br />
			<input
				type="submit"
				value="Submit" />
		</form>
		<script>
			$.ajax({
				type: "POST",
				url: "/personjson",
				data: JSON.stringify({
					firstName: "Jane",
					lastName: "Wilson"
				}),
				dataType: "json",
				contentType: "application/json"
			});
		</script>
	</body>
</html>
